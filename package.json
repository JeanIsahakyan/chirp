{
  "name": "aspect-monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "Aspect - A powerful communication bridge framework for React Native, Web, and iframes",
  "repository": "https://github.com/JeanIsahakyan/chirp",
  "author": "Jean Isahakyan <jeanisahkyan@gmail.com> (https://github.com/JeanIsahakyan)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JeanIsahakyan/chirp/issues"
  },
  "homepage": "https://github.com/JeanIsahakyan/chirp#readme",
  "scripts": {
    "build": "pnpm -r build",
    "build:core": "pnpm --filter @aspect/core build",
    "build:web": "pnpm --filter @aspect/web build",
    "build:react-native": "pnpm --filter @aspect/react-native build",
    "build:react-native-web": "pnpm --filter @aspect/react-native-web build",
    "dev": "pnpm -r --parallel dev",
    "lint": "pnpm -r lint",
    "typecheck": "tsc --build tsconfig.build.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "clean": "pnpm -r clean && rimraf node_modules",
    "release": "pnpm build && changeset publish",
    "version": "changeset version"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/node": "^20.10.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.2",
    "@commitlint/config-conventional": "^17.0.2",
    "commitlint": "^17.0.2",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.0.5",
    "vitest": "^1.6.0",
    "@vitest/coverage-v8": "^1.6.0",
    "jsdom": "^24.0.0",
    "@testing-library/react": "^14.2.0",
    "@testing-library/jest-dom": "^6.4.0"
  },
  "packageManager": "pnpm@8.10.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  }
}
