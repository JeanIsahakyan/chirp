{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@aspect/react-native-web": ["./src/index.ts"],
      "@aspect/core": ["../core/src/index.ts"],
      "@aspect/web": ["../web/src/index.ts"],
      "@aspect/react-native": ["../react-native/src/index.ts"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.test.tsx"],
  "references": [
    { "path": "../core" },
    { "path": "../web" },
    { "path": "../react-native" }
  ]
}
