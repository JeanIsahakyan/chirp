{
  "name": "@aspectly/react-native",
  "version": "0.1.0",
  "description": "React Native WebView integration for Scpe bridge - communicate with web content in your React Native app",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "react-native": "./src/index.ts",
  "exports": {
    ".": {
      "react-native": "./src/index.ts",
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "clean": "rimraf dist",
    "test": "vitest run"
  },
  "keywords": [
    "react-native",
    "webview",
    "bridge",
    "communication",
    "ios",
    "android",
    "mobile"
  ],
  "author": "Jean Isahakyan <jeanisahkyan@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/aspect-ly/aspectly",
    "directory": "packages/react-native"
  },
  "bugs": {
    "url": "https://github.com/aspect-ly/aspectly/issues"
  },
  "homepage": "https://github.com/aspect-ly/aspectly/tree/main/packages/react-native#readme",
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-native": ">=0.60.0",
    "react-native-webview": ">=11.0.0"
  },
  "dependencies": {
    "@aspectly/core": "workspace:*"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-native": "^0.72.0",
    "react": "^18.2.0",
    "react-native": "^0.72.0",
    "react-native-webview": "^13.0.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.2",
    "rimraf": "^5.0.5"
  }
}
